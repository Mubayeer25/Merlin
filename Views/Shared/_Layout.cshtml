<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
@@import url('https://fonts.googleapis.com/css2?family=Stick+No+Bills:wght@600&display=swap');

</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light  mt-0 mb-4" style="background-color: #e3f2fd; margin-top:-50px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index" style="font-family: 'Stick No Bills', sans-serif;font-size:25px;color:red">EasyFly.com</a>
                <div class="navbar-nav float-right">
                    <a class="nav-link active" aria-current="page" href="/Home/Index">Home</a>
                    <a class="nav-link" href="#">Log In</a>
                    <a class="nav-link" href="#">Contact</a>
                    
                </div>
            </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EasyFly.com </p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
